generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  email         String   @unique
  password_hash String
  name          String?   // keep it
  role          String   @default("user")
  subscription  String   @default("free")
  created_at    DateTime @default(now())

  org_id        String?
  organization  Organization? @relation(fields: [org_id], references: [id])

  goals         Goal[]
  executions    Execution[]
  audits        Audit[]

  @@map("users")
}

model Organization {
  id          String   @id
  name        String
  created_at  DateTime @default(now())

  users       User[]
  
  @@map("organizations")
}

model Goal {
  id          Int          @id @default(autoincrement())
  user_id     String
  title       String
  description String?
  status      String       @default("active")
  goal_type   String?
  created_at  DateTime     @default(now())

  user        User         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  objectives  Objective[]
  executions  Execution[]

  @@map("goals")
}

model Objective {
  id          Int        @id @default(autoincrement())
  goal_id     Int
  title       String
  description String?
  completed   Boolean    @default(false)
  created_at  DateTime   @default(now())

  goal        Goal       @relation(fields: [goal_id], references: [id], onDelete: Cascade)
  executions  Execution[]

  @@map("objectives")
}

model Execution {
  id           Int        @id @default(autoincrement())
  user_id      String
  goal_id      Int?
  objective_id Int?
  action       String
  details      Json?
  created_at   DateTime   @default(now())
  started_at   DateTime?  // <-- Add this line

  user      User      @relation(fields: [user_id], references: [id], onDelete: Cascade)
  goal      Goal?     @relation(fields: [goal_id], references: [id])
  objective Objective? @relation(fields: [objective_id], references: [id])

  @@map("executions")
}

model Audit {
  id         Int      @id @default(autoincrement())
  user_id    String
  action     String
  details    Json?
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("audit")
}